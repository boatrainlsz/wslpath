<idea-plugin>
  <id>com.github.boatrainlsz.wslpath</id>
  <name>Copy WSL Path of File</name>
  <vendor>boatrainlsz</vendor>
  <description>Provides copy WSL path of file support in IntelliJ-based IDE.</description>

  <depends>com.intellij.modules.platform</depends>

  <actions>
    <action id="CopyPathInWSLProvider"
            class="com.github.boatrainlsz.wslpath.actions.CopyPathInWSLProvider"
            icon="AllIcons.RunConfigurations.Wsl"
            text="Path in WSL">
      <add-to-group group-id="CopyFileReference"/>
    </action>
  </actions>
</idea-plugin>
